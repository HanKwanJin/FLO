<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/song_cover_cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/song_cover_img"
            android:src="@drawable/img_album_exp2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/song_title_tv"
        app:layout_constraintStart_toEndOf="@+id/song_cover_cardView"
        app:layout_constraintTop_toTopOf="@+id/song_cover_cardView"
        android:text="LILAC"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/song_singer_tv"
        app:layout_constraintStart_toStartOf="@+id/song_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/song_title_tv"
        android:text="아이유 (IU)"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/song_play_ib"
        app:layout_constraintTop_toTopOf="@+id/song_more_ib"
        app:layout_constraintBottom_toBottomOf="@+id/song_more_ib"
        app:layout_constraintEnd_toStartOf="@+id/song_more_ib"
        android:scaleType="fitXY"
        android:src="@drawable/btn_miniplayer_play"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <ImageButton
        android:id="@+id/song_more_ib"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_player_more"
        android:layout_width="25dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitXY"
        android:background="@color/white"
        android:layout_height="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>